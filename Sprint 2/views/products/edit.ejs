<!DOCTYPE html>
<html>

<head>
  <%-include ('.././partials/head')%>
</head>

<body>
  <%-include ('.././partials/header')%>

 <section class= "Form-Container m-5">
  <h2>Editar <%=cursoAEditar.nombre%> </h2>
  <form id="form4" class="row g-3" action="/courses/edit/<%=cursoAEditar.id%>" method="POST" enctype="multipart/form-data" >
      <div class="col-md-6">
        <label for="nombre" class="form-label">Nombre</label>
        <input value="<%=cursoAEditar.nombre%>" type="text" class="form-control" id="nombre" name="nombre"> </input> 
      </div>
      <div class="col-md-6">
        <label for="descripcion" class="form-label"> Breve descripcion</label>
        <textarea class="form-control" id="descripcion" name="descripcion"> <%=cursoAEditar.descripcion%> </textarea>
      </div>
      <div class="col-md-6">
        <label for="especific" class="form-label">Especificaciones</label> 
        <br>
        <label>Horarios </label><input value="<%=cursoAEditar.horarios%>" class="form-control" id="horarios" class="especific" name="horarios"> </input> 
        <label>Duraci√≥n </label><input value="<%=cursoAEditar.duracion%>" class="form-control" id="duracion" class="especific" name="duracion"> </input> 
        <label>Requisitos</label><input value="<%=cursoAEditar.requisitos%>" class="form-control" id="requisitos" class="especific" name="requisitos"> </input> 
        <label>Precio</label><input value="<%=cursoAEditar.precio%>" class="form-control" id="precio" class="especific" name="precio"> </input> 
        <label>Cuotas </label><input value="<%=cursoAEditar.cuotas%>" class="form-control" id="cuotas" class="especific" name="cuotas"> </input> 
      </div>
      <div class="col-md-6">
        <label for="temas" class="form-label"> Temas que aborda el curso </label>
          <ul>
          <% for (let tema of temas) { %>
            <li><label><input value="<%=tema.titulo%>" type="checkbox" id="temas" name="temas"/><%=tema.titulo%> </label></li>
          <% } %>
          </ul>
      </div>
         <div class="col-md-4">
        <div class="col-md-4">
          <label for="nombreImagen" class="form-label" >Imagen del Curso</label>
          <input type="file"  class="form-control" id="nombreImagen" name="nombreImagen" value="<%=cursoAEditar.nombreImagen%>"/>
        </div>
      <div class="col-12">
        <button type="submit" class="button-detail">Guardar</button>
      </div>
    </form>
</section>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/validfrontedit.js" type="text/javascript">  </script> 

  <%-include ('.././partials/footer')%>
</body>
</html>