<!DOCTYPE html>
<html>

<head>
  <%-include ('.././partials/head')%>
</head>

<body>
  <%-include ('.././partials/header')%>

 <section class= "Form-Container m-5">
  <h2>Editar <%=cursoEditable.nombre%> </h2>
  <form class="row g-3" action="/courses/edit/<%=cursoEditable.id%>?_method=PUT" method="POST">
      <div class="col-md-6">
        <label for="nombre" class="form-label">Nombre</label>
        <input value="<%=cursoEditable.nombre%>" type="text" class="form-control" id="nombre"> </input> 
      </div>
      <div class="col-md-6">
        <label for="descripcion" class="form-label"> Breve descripcion</label>
        <textarea class="form-control" id="descripcion"> <%=cursoEditable.descripcion%> </textarea>
      </div>
      <div class="col-12">
        <label for="especific" class="form-label">Especificaciones</label>
        <input value="<%=cursoEditable.especific%>" class="form-control" id="especific"> </input>
      </div>
      <div class="col-md-6">
        <label for="incluye" class="form-label"> Temas que aborda el curso </label>
        <textarea class="form-control" id="incluye"> <%=cursoEditable.incluye%></textarea>
      </div>
      <div class="col-md-4">
        <label for="imgPath">  <strong> Imagen ilustrativa  </strong> </label>
<!---       <input src="img/cursos/<%=cursoEditable.imgPath%>" type="file" name="imgPath" accept=".jpg"/>--> 
      </div>
      <div class="col-12">
        <button type="submit" class="btn btn-primary">Guardar</button>
      </div>
    </form>
</section>

  <%-include ('.././partials/footer')%>
</body>
</html>