<!DOCTYPE html>
<html>

<head>
  <%-include ('.././partials/head')%>
</head>

<body>
  <%-include ('.././partials/header')%>

 <section class= "Form-Container m-5">
  <h2>Editar <%=cursoEditable.nombre%> </h2>
  <form class="row g-3" action="/courses/edit/<%=cursoEditable.id%>?_method=PUT" method="POST" enctype="multipart/form-data">
      <div class="col-md-6">
        <label for="nombre" class="form-label">Nombre</label>
        <input value="<%=cursoEditable.nombre%>" type="text" class="form-control" id="nombre" name="nombre"> </input> 
      </div>
      <div class="col-md-6">
        <label for="descripcion" class="form-label"> Breve descripcion</label>
        <textarea class="form-control" id="descripcion" name="descripcion"> <%=cursoEditable.descripcion%> </textarea>
      </div>
      <div class="col-12">
        <label for="especific" class="form-label">Especificaciones</label>
        <input value="<%=cursoEditable.especific%>" class="form-control" id="especific" name="especific"> </input>
      </div>
      <div class="col-md-6">
        <label for="incluye" class="form-label"> Temas que aborda el curso </label>
        <textarea class="form-control" id="incluye" name="incluye"> <%=cursoEditable.incluye%></textarea>
      </div>
      <div class="col-md-4">
        <div class="col-md-4">
          <label for="ImagenCurso" class="form-label">Imagen del Curso</label>
          <input type="file"  class="form-control" id="ImagenCurso" name="ImagenCurso" />
        </div>
      <div class="col-12">
        <button type="submit" class="button-detail">Guardar</button>
      </div>
    </form>
</section>

  <%-include ('.././partials/footer')%>
</body>
</html>