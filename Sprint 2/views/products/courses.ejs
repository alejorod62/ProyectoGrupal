<!DOCTYPE html>

<html>

  <head>
    <%-include ('.././partials/head')%>
  </head>

  <body>
    <%-include ('.././partials/header')%>

 <main>

    <h1 title="CURSOS" class="titulocurso" > CURSOS DISPONIBLES </h1>

    <% for(let curso of Allcursos) { %>
      
    <article class="producto">
            <h2 class="titulares" id="nombre"> <%=curso.nombre%></h2>
            <section class="right">
                <a href="/courses/details/<%=curso.id%>"> <img src="/img/cursos/<%=curso.nombreImagen%>" class="imagenescurso" > </img> </a>
                       
              <div id="info">        
                  <p  id="descripcion"> <%=curso.descripcion%> </p>
                  <ul>
                      <li id="horarios"> Horarios: <%=curso.horarios%> </li>
                      <li id="duracion"> Duracion: <%=curso.duracion%> </li>
                      <li id="requisitos"> Requisitos: <%=curso.requisitos%> </li>
                      <li id="cuotas"> Cuotas: <%=curso.cuotas%> </li>

                  </ul>
              </div>
        </section>
               <a href="/courses/cart"> <button class="button-detail" name="boton-carrito" id="agregar-al-carrito"> Agregar al carrito </button> </a>
               <a href="/courses/details/<%=curso.id%>"> <button class="button-detail">Detalles del curso</button> </a>
      </article>         
       
        <% } %>

        <div > <a href="/courses/new"> <button class="button-detail" id="crear-curso"> Crear curso </button> </a>
        </div>
   
        <br>

 </main>
<script src="/js/carritologic.js" type="text/javascript">  </script> 

    <%-include ('.././partials/footer')%>
</body>
</html>