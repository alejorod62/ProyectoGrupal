<!DOCTYPE html>

<html>

  <head>
    <%-include ('.././partials/head')%>
  </head>

  <body>
    <%-include ('.././partials/header')%>

 <main>

       
    <article class="producto">
        <h2 class="titulares" id="nombre"><%=cursoElegido.nombre%></h2>
        <section class="right">
            <img src="/img/cursos/<%=cursoElegido.nombreImagen%>" class="imagenescurso" > </img>
            <div id="info">
                <p  id="descripcion"> <%=cursoElegido.descripcion%> </p>
                <ul>
                    <li id="horarios"> Horarios: <%=cursoElegido.horarios%> </li>
                    <li id="duracion"> Duracion: <%=cursoElegido.duracion%> </li>
                    <li id="requisitos"> Requisitos: <%=cursoElegido.requisitos%> </li>
                    <li id="precio"> Precio : $<%=cursoElegido.precio%> </li>
                    <li id="cuotas"> Cuotas: <%=cursoElegido.cuotas%> </li>
                </ul>
            </div>            
        </section>
        
        <div id="contenido"> 
            <h4> En este curso vas a aprender </h4>
            <ul class="columnas">
                <%for (let tema of cursoElegido.temas) { %>
                <li>  <%=tema.titulo%> </li>
                <% } %>
            </ul>
               
        </div>
        <br>
        <div >
        <a href="/courses/cart"> <button class="button-detail" name="boton-carrito" id="agregar-al-carrito"> Agregar al carrito </button> </a> 
        <hr>
        <% if (locals.logueado) { %>
        <a href="/courses/edit/<%=cursoElegido.id%>"> <button type="submit" class="button-detail" id="edit-curso"> EDITAR </button> </a> 
        <hr>
        <form action="/courses/<%=cursoElegido.id%>" method="POST" onsubmit="return confirm('Â¿Estas seguro?');">
            <button type="submit" class="button-detail">ELIMINAR</button>
        </form>
        <% } %>

    </div>
    </article>  

 </main>

 <script src="/js/carritoLogic.js" type="text/javascript">  </script> 
    <%-include ('.././partials/footer')%>
</body>
</html>