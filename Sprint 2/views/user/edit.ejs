<!DOCTYPE html>
<html>

<head>
  <%-include ('.././partials/head')%>
</head>

<body>
  <%-include ('.././partials/header')%>

 <section class= "Form-Container m-5">
  <h2>Editar perfil</h2>
  <form id="form5" class="row g-3" action="/user/edit" method="POST" enctype="multipart/form-data" >
      <div class="col-md-6">
        <label for="nombre" class="form-label">Nombre</label>
        <input value="<%=usuario.nombre%>" type="text" class="form-control" name="nombre" id="nombre"> </input> 
        <% if (locals && locals.errors) { %>
          <% if (locals.errors[0].param=="nombre") { %>
          <h6> <%= locals.errors[0].msg %> </h6>
          <% } %>
        <% } %>
      </div>
      <div class="col-md-6">
        <label for="apellido" class="form-label">Apellido</label>
        <input value= "<%=usuario.apellido%>" class="form-control" name="apellido" id="apellido"> </input>
        <% if (locals && locals.errors) { %>
          <% if (locals.errors[0].param=="apellido") { %>
          <h6> <%= locals.errors[0].msg %> </h6>
          <% } %>
        <% } %>
      </div>
      <div class="col-md-6">
        <label for="email" class="form-label">Correo Electrónico</label>
        <input type="email" value="<%=usuario.email%>" class="form-control" name="email" id="email"> </input>
        <% if (locals && locals.errors) { %>
          <% if (locals.errors[0].param=="email") { %>
          <h6> <%= locals.errors[0].msg %> </h6>
          <% } %>
        <% } %>
      </div>
      <div class="col-10">
        <label for="direccion" class="form-label">Dirección</label>
        <input value="<%=usuario.direccion%>" type="text" class="form-control" id="direccion" name="direccion" >
        <% if (locals && locals.errors) { %>
          <% if (locals.errors[0].param=="direccion") { %>
          <h6> <%= locals.errors[0].msg %> </h6>
          <% } %>
        <% } %>
      </div>
      <div class="col-md-6">
        <label for="ciudad" class="form-label">Ciudad</label>
        <input value="<%=usuario.ciudad%>" type="text" class="form-control" id="ciudad" name="ciudad" >
        <% if (locals && locals.errors) { %>
          <% if (locals.errors[0].param=="ciudad") { %>
          <h6> <%= locals.errors[0].msg %> </h6>
          <% } %>
        <% } %>
      </div>
      <div class="col-md-4">
        <label for="pais" class="form-label">País</label>
        <select id="pais" name="pais" class="form-select" >
          <option selected><%=usuario.pais%></option>
          <option> Argentina </option>
          <option> Uruguay </option>
          <option> Chile </option>
          <option> Paraguay </option>
          <option> Bolivia </option>
          <option> Perú </option>
          <option> Colombia </option>
          <option> Brasil </option>
          <option> Venezuela </option>
          <option> México </option>
        </select>
        <% if (locals && locals.errors) { %>
          <% if (locals.errors[0].param=="pais") { %>
          <h6> <%= locals.errors[0].msg %> </h6>
          <% } %>
        <% } %>
      </div>

      <div class="col-md-6">
        <label for="telefono" class="form-label"> Número de teléfono</label>
        <input value="<%=usuario.telefono%>" class="form-control" name="telefono" id="telefono"> </input>
        <% if (locals && locals.errors) { %>
          <% if (locals.errors[0].param=="telefono") { %>
          <h6> <%= locals.errors[0].msg %> </h6>
          <% } %>
        <% } %>
      </div>
      <div class="col-md-4">
        <label for="nombreImagen" class="form-label">Imagen de perfil</label>
        <input type="file" value="<%=usuario.nombreImagen%>" class="form-control" id="nombreImagen" name="nombreImagen" />
      </div>
      <div class="col-12">
        <button type="submit" class="button-detail">Guardar</button>
      </div>
    </form>
    <form action="/user/edit?_method=DELETE" method="POST" onsubmit="return confirm('¿Estas seguro?');">
      <button type="submit" class="button-detail">ELIMINAR</button>
    </form>
</section>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/validfrontedituser.js" type="text/javascript">  </script> 	

  <%-include ('.././partials/footer')%>
</body>
</html>